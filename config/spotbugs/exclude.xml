<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Exclude test classes from certain checks -->
    <Match>
        <Class name="~.*\.Test.*"/>
        <Bug pattern="DM_EXIT"/>
    </Match>
    
    <!-- Exclude generated code -->
    <Match>
        <Class name="~.*\.generated\..*"/>
    </Match>
    
    <!-- Exclude specific Minecraft modding patterns -->
    <Match>
        <Class name="~.*Mixin.*"/>
        <Bug pattern="MS_SHOULD_BE_FINAL"/>
    </Match>
    
    <!-- Allow public static fields in mod registration classes -->
    <Match>
        <Class name="~.*Mod$"/>
        <Bug pattern="MS_SHOULD_BE_FINAL"/>
    </Match>
    
    <!-- Allow exposing RoomBlockEntity reference as it's safe in Minecraft context -->
    <Match>
        <Class name="com.harrisfauntleroy.roomcull.RoomManager"/>
        <Method name="getCurrentViewerRoom"/>
        <Bug pattern="MS_EXPOSE_REP"/>
    </Match>
</FindBugsFilter>